<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox fx:id="hBoxRoot" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="net.liceo.bar.exercicioexame.NumberController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label text="Cantidad de números a ordenar" />
  <TextField fx:id="numberField" />
  <Button text="Enviar número" onAction="#onEnviarNumeroButtonClick"/>
  <HBox fx:id="hbox">
  </HBox>

  <Label fx:id="numbersLabel" disable="true"/>
  <Button fx:id="ordenar" text="Ordenar" onAction="#onOrdenarButtonClick" disable="true"/>
</VBox>
